<%- include('header') %>
<header>
    Deposit money for <%= username %>
</header>
<form method="POST" action="/deposit">
    <table>
        <thead>
            <tr>
                <th>Account ID</th>
                <th>Amount ($)</th>
            </tr>
        </thead>
        <% for (const account of accounts) { %>
            <tr>
                <td>
                    <label for="account">
                        <%= account.id %>
                    </label>
                    <input
                        type="hidden" id="account"
                        name="deposits[<%= account.id %>][id]"
                        value="<%= account.id %>" />
                </td>
                <td>
                    <input
                        type="number"
                        name="deposits[<%= account.id %>][amount]"
                        min="0" step="0.01"  />
                </td>
            </tr>
        <% } %>
    </table>
    <p>
        <input type="submit" value="Deposit" />
    </p>
</form>
<%- include('footer') %>
